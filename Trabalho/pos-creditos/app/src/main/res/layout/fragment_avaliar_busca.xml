<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".gui.avaliar.AvaliarBuscaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/avaliar_busca_texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp"
            android:text="@string/avaliar_busca_texto"
            android:textSize="20dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/avaliar_busca_recycler_view"
            android:layout_below="@id/avaliar_busca_texto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>
</FrameLayout>