<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_fragment"
    tools:context=".viewController.outros.ContatoFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/space"
        android:text="@string/contato_texto"
        android:textSize="@dimen/size_title" />

    <EditText
        android:id="@+id/contato_email"
        android:inputType="textEmailAddress"
        android:autofillHints="email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/contato_nome"
        android:textSize="@dimen/size_text" />

    <EditText
        android:id="@+id/contato_assunto"
        android:inputType="textEmailSubject"
        android:importantForAutofill="no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/contato_assunto"
        android:textSize="@dimen/size_text" />

    <EditText
        android:id="@+id/contato_mensagem"
        android:inputType="textMultiLine"
        android:importantForAutofill="no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="5"
        android:gravity="top"
        android:hint="@string/contato_mensagem"
        android:textSize="@dimen/size_text" />

    <Button
        android:id="@+id/contato_enviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/contato_enviar" />

</LinearLayout>