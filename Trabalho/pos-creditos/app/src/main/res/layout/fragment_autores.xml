<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_fragment"
    tools:context=".viewController.outros.AutoresFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/space"
        android:text="@string/autores_texto"
        android:textSize="@dimen/size_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/half_space">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:paddingRight="@dimen/half_space"
            android:src="@drawable/autores_felipe_marchi" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Felipe Carreiro Marchi"
                android:textSize="@dimen/size_text"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20 anos"
                android:textSize="@dimen/size_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="f196695@dac.unicamp.br"
                android:textSize="@dimen/size_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Limeira - SP"
                android:textSize="@dimen/size_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WEB e ASP.NET"
                android:textSize="@dimen/size_text" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/half_space">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:paddingRight="@dimen/half_space"
            android:src="@drawable/autores_vinicius_abrantes" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vinícius Abrantes Pereira"
                android:textSize="@dimen/size_text"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20 anos"
                android:textSize="@dimen/size_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="v206681@dac.unicamp.br"
                android:textSize="@dimen/size_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paulínia - SP"
                android:textSize="@dimen/size_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Java e Python"
                android:textSize="@dimen/size_text" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>